@rendermode InteractiveServer
@using SkillsShowcase.Shared.Domain.Clients
@using SkillsShowcase.Shared.Domain.Models.ApiModelsForApiCall;


<div class="modal fade @(IsVisible ? "show" : "")" tabindex="-1" role="dialog" style="display:@(IsVisible ? "block" : "none");" aria-labelledby="exampleModalLabel" aria-hidden="@(IsVisible ? "false" : "true")">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Employee Secrets</h5>
                <button type="button" class="close" @onclick="CloseModal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (EmployeeSecrets != null)
                {
                    <ul>
                        @foreach (var secret in EmployeeSecrets)
                        {
                            <div class="col row">
                                <div class="col-12 col-sm-8">
                                    <div class="form-group row">
                                        <label class="col-sm-5 col-form-label">Employee ID</label>
                                        <div class="col-sm-7">
                                            <label type="text" class="form-control-plaintext">@secret.Id</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-5 col-form-label">Employee Name</label>
                                        <div class="col-sm-7">
                                            <label type="text" class="form-control-plaintext">@secret.EmployeeName</label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-5 col-form-label">Employee SecretKey</label>
                                        <div class="col-sm-7">
                                            <label type="text" class="form-control-plaintext">@secret.SecretKey</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </ul>
                }
                else
                {
                    <p>Loading...</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
            </div>
        </div>
    </div>
</div>
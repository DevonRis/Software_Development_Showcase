@rendermode InteractiveServer
@using SkillsShowcase.Shared.Domain.Clients
@using SkillsShowcase.Shared.Domain.Models.ApiModelsForApiCall;


<div class="modal fade @(IsVisible ? "show" : "")" tabindex="-1" role="dialog" style="display:@(IsVisible ? "block" : "none");" aria-labelledby="exampleModalLabel" aria-hidden="@(IsVisible ? "false" : "true")">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Employee Secrets</h5>
                <button type="button" class="close" @onclick="CloseModal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (EmployeeSecrets != null)
                {
                    <ul>
                        @foreach (var secret in EmployeeSecrets)
                        {
                            <li>ID: @secret.Id</li>
                            <li>Name: @secret.EmployeeName</li>
                            <li>Secret Key: @secret.SecretKey</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Loading...</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
            </div>
        </div>
    </div>
</div>
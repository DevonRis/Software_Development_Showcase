@rendermode InteractiveServer

<div>
    <canvas id="marvelVillainsDoughnutChart"></canvas>
</div>

<script>
    window.renderDoughnutChart = (villains, kills) => {
        const ctx = document.getElementById('marvelVillainsDoughnutChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: villains,
                datasets: [{
                    label: 'Confirmed Kills',
                    data: kills,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)', // Doctor Doom
                        'rgba(54, 162, 235, 0.2)', // Red Skull
                        'rgba(255, 206, 86, 0.2)',  // Thanos
                        'rgba(75, 192, 192, 0.2)',  // Loki
                        'rgba(153, 102, 255, 0.2)', // Green Goblin
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)', // Doctor Doom
                        'rgba(54, 162, 235, 1)', // Red Skull
                        'rgba(255, 206, 86, 1)',  // Thanos
                        'rgba(75, 192, 192, 1)',  // Loki
                        'rgba(153, 102, 255, 1)', // Green Goblin
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Marvel Villains Confirmed Kills'
                    }
                }
            }
        });
    };
</script>
@rendermode InteractiveServer

<canvas id="barChartCanvas"></canvas>

<script>
    function renderBarChart(barChartCanvas, barChartLabels, barChartData) {
        var canvasForChart = document.getElementById(barChartCanvas).getContext('2d');
        new Chart(canvasForChart, {
            type: 'bar',
            data: {
                labels: barChartLabels,
                datasets: [{
                    label: 'Session Counts',
                    data: barChartData,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: {
                        labels: {
                            usePointStyle: true, // This will make the legend box a circle instead of a square
                            pointStyle: 'rectRounded', // You can use 'circle', 'rect', 'rectRounded', 'rectRot', 'triangle', 'star', 'line', 'dash'
                            boxWidth: 20, // Width of the box
                            padding: 20, // Padding around the box
                            color: '#333', // Text color for the label
                            font: {
                                size: 14,
                                family: 'Arial',
                                weight: 'bold'
                            }
                        }
                    }
                }
            }
        });
    };
</script>
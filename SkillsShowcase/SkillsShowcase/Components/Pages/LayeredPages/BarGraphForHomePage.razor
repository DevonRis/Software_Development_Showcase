@rendermode InteractiveServer

<canvas id="barChartCanvasOne"></canvas>

<script>
    function renderBarChart(barChartCanvasOne, barChartLabels, barChartData) {
        var canvasForChart = document.getElementById(barChartCanvasOne).getContext('2d');
        new Chart(canvasForChart, {
            type: 'bar',
            data: {
                labels: barChartLabels,
                datasets: [{
                    label: 'Session Counts',
                    data: barChartData,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: {
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'rectRounded',
                            boxWidth: 20,
                            padding: 20,
                            color: '#333',
                            font: {
                                size: 14,
                                family: 'Arial',
                                weight: 'bold'
                            }
                        }
                    }
                }
            }
        });
    };
</script>
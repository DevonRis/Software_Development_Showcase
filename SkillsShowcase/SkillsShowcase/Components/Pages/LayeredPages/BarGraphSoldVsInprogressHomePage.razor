@rendermode InteractiveServer

<canvas id="barChartCanvasTwo"></canvas>

<script>
    window.renderBarChartTwo = async (soldCars, inProcessCars) => {
        var canvasForChart = document.getElementById('barChartCanvasTwo').getContext('2d');
        var barChart = new Chart(canvasForChart, {
            type: 'bar',
            data: {
                labels: ['Sold', 'In Progress'],
                datasets: [{
                    label: 'Sold vs In Progress',
                    data: [soldCars, inProcessCars],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    };
</script>